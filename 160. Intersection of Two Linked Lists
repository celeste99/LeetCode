public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {
        int lengthA = 0, lengthB = 0;        
        ListNode cur = headA;
        while (cur != null) {
            lengthA++;
            cur = cur.next;
        }
        cur = headB;
        while (cur != null) {
            lengthB++;
            cur = cur.next;
        }
        
        ListNode curA = headA, curB = headB;
        if (lengthA > lengthB) {
            for (int i = 0; i < lengthA - lengthB; i++) {
                curA = curA.next;
            }
        }
        if (lengthA < lengthB) {
            for (int i = 0; i < lengthB - lengthA; i++) {
                curB = curB.next;
            }
        }
        
        while (curA != null) {
            if (curA == curB) {
                return curA;
            }
            curA = curA.next;
            curB = curB.next;
        }
        
        return null;
    }
}////////